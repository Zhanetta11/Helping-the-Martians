import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();
        
        int distance = 7;
        int[] cargoLocations = new int[3];
        
        for (int i = 0; i < 3; i++) {
            cargoLocations[i] = random.nextInt(distance) + 1;
        }
    
        System.out.println ("The Martians have discreetly hidden their cargo in three different locations along the path.");
        
        randomizeCargoLocations (cargoLocations );

        System.out.println ("Suddenly, the Martians discovered that they had lost the map that marked where their valuable cargo was buried.\nLet's help the Martians find their cargo!\nYou have only 5 attempts to correctly guess the locations of the cargo boxes. After that, the boxes will be shuffled again, and the game restarts.\n ");
        
        guessingTheCargoLocations (cargoLocations);
    }
    
    
    public static void randomizeCargoLocations ( int[] cargoLocations ) {
        Random random = new Random();
        for (int i = 0; i < cargoLocations.length; i++) {
           cargoLocations[i] = random.nextInt(7) + 1;  
        }
    }
    
    public static void guessingTheCargoLocations ( int [] cargoLocations ) {
        Scanner scanner = new Scanner(System.in);
        int attempts = 5;
        
        while (attempts > 0) {
            System.out.println("Enter an estimated kilometer mark (1-7): ");
            int[] estimatedLocation = new int[3];
         
            for (int i = 0; i < 3; i++) {
                estimatedLocation [i] = scanner.nextInt();
            }
            
            int correctGuesses = checkGuess( estimatedLocation, cargoLocations);
            
            if (correctGuesses == 3) {
                System.out.println("Congratulations! You found all boxes!");
            } 
            else {
                System.out.println("Number of correct guesses: " + correctGuesses);
                attempts--;
                
                if (attempts == 0) {
                    System.out.println("Mission failed. Martians have shuffled the cargo locations. Try again!");
                } 
            }
        }
    }
    
    
    public static int checkGuess(int[] estimatedLocations, int[] cargoLocations) {
        int correctGuesses = 0;
        
        for (int i = 0; i < 3; i++) {
            for (int j = 0; j < 3; j++) {
                if (estimatedLocations[i] == cargoLocations[j]) {
                    correctGuesses++;
                }
            }
        }
        return correctGuesses;
    }
}